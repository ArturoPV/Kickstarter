<% if user.errors.any? %>
  <ul>
    <% user.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %> >

<div class="container" style="width: 26%; margin-top: 5%;">
<%= form_for user do |f| %>
  <h1 style="font-family: Arial,sans-serif;">Cuentanos de ti</h1>
  <div class="form-group">
    <label for="nombre">Nombre:</label>
    <input type="text" class="form-control" id="nombre" name="user[fname]">
  </div>

  <div class="form-group">
    <label for="apellido">Apellido:</label>
    <input type="text" class="form-control" id="apellido" name="user[lname]">
  </div>

<div class="form-group">
  <label for="email">Email address:</label>
  <input type="email" class="form-control" id="email" name="user[email]">
</div>

  <div class="form-group">
    <label for="edad">Edad</label>
    <input type="number" id="replyNumber" class="form-control" min="0" step="1" data-bind="value:replyNumber" name="user[age]"/>
  </div>

  <div class="form-group">
    <label for="pwd">Password:</label>
    <input type="password" class="form-control" id="password" name="user[password]">
  </div>
  <%= f.submit %>
  <!--button id="registrar" class="btn btn-default" style="background: linear-gradient(to bottom,#dc3545,#f0c14b); width: 100%">Registrarse</button-->
  <!-- <button id="enviar" type="submit" class="btn btn-default" style="background: linear-gradient(to bottom,#dc3545,#f0c14b); width: 100%;">Registrarse</button> -->
<% end %>
</div>

<script type="text/javascript">
$("#registrar").on("click", function(event){

  console.log("Verificacion del registro");
  event.preventDefault();

  var hasError = false;
  if ($("#nombre").val() == ""){
    console.log("Nombre vario");
    hasError = true;
  }
  else{
    console.log("Ya no esta vacio");
  }

  if (!hasError){
    $("#enviar").click();
  }
});
</script>


